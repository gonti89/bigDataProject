FROM python:3.9-alpine
ADD internet_generator.py .
RUN pip install faker kafka-python
ENV KAFKA_TOPIC=$KAFKA_TOPIC
ENV KAFKA_SERVER=$KAFKA_SERVER
ENV KAFKA_PORT=$KAFKA_PORT
ENV COOKIE_NUMBER=$COOKIE_NUMBER
ENV DOMAIN=$DOMAIN
CMD python ./internet_generator.py ${KAFKA_SERVER} ${KAFKA_PORT} ${KAFKA_TOPIC} ${COOKIE_NUMBER} ${DOMAIN}
